ext "std.math : sin,cos,tan,PI";

function abs(x int) as int {
    if x > 1 {
        return x;
    }else{
        return -x;
    }
}

function max(a float,b float) as float {
	if a > b {
		return a;
	}
	return b;
}

function min( a float , b float) as float {
	if a < b {
		return a;
	}
	return b;
}

function radians( degrees float )  as float {
	return degrees * (PI / 180.0);
}
